<% publish_to '/live-feed' do %>
  $('#posts')
    .prepend('<tr id="post-<%= @post.id %>"><%= j render partial: "public", locals: { post: @post } %></tr>');

  $('#post-<%= @post.id %>')
    .hide()
    .fadeIn();
<% end %>

