<% publish_to '/live-feed' do %>
  $('.home-page-posts')
    .prepend('<article class="post" id="post-<%= @post.id %>"><%= j render partial: "public", locals: { post: @post } %></article>');

  $('#post-<%= @post.id %>')
    .hide()
    .fadeIn();
<% end %>

