  <title>CapsuleMonsters</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script type="text/javascript" src="https://twitter.github.io/typeahead.js/releases/latest/typeahead.bundle.js"></script>
</head>

  <body>
    <div class="container-fluid"> <!--  Main Container Div -->
      <div class="row">
        <div class="col-md-1">
          <!-- spacing -->
        </div>
        <div class="col-md-9">
        <div>
          <audio id="player" src="/media/PokemonTVThemeSongFull.mp3"></audio>
          <img onclick="playPause()" src="/images/pokeball.png" alt="Pokemon Logo" id="pokelogo" height="50px;" width="50px;" class: "img-responsive poke_logo_image">
        </div>

        <% if user_signed_in? %>
          <div class="users-search" id="remote">

             <%= form_tag users_path, method: :get do %>
               <div class="form-group">
                 <%= text_field_tag :query, params[:query], class: 'form-control typeahead', autocomplete: "off", placeholder: "Search" %>
                 <%= submit_tag 'Search', class: 'btn btn-primary' %>
               </div>
             <% end %>
          </div>
          <%= link_to "My Timeline!", timeline_path, class: "btn btn-default" if current_user %>
          <%= link_to "Pokewall", posts_path, class: "btn btn-default" %>
        <% end %>

        <% if flash[:notice] %>
          <div class="alert alert-warning">
            <% flash[:notice].each do |name, msg| -%>
              <%=  name.capitalize + " " + msg.to_sentence %>
            <% end -%>
          </div>
          <% end %>


          <%= yield %>

        </div>
      </div>
    </div>  <!-- end main container div -->
  </body>
</html>
